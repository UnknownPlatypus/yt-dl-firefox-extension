{

  "description": "Run native linux commands from firefox",
  "manifest_version": 2,
  "name": "Command Runner",
  "version": "1.4",
  "icons": {
    "48": "icons/message.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "firefox_command_runner@example.org",
      "strict_min_version": "57.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/YTIcon.png",
    "default_title": "Youtube-dl",
    "default_popup" :"index.html"
  },

  "permissions": [
    "nativeMessaging",
    "notifications",
    "activeTab",
    "cookies",
    "<all_urls>",
    "tabs"
  ]
}
